<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#FCF6F5">

    <!-- Header -->
    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DopingDefiance"
        android:textSize="36sp"
        android:textColor="#FCF6F5"
        android:textStyle="bold"
        android:background="#990011"
        android:layout_marginBottom="20dp" />

    <!-- Intro text -->
    <TextView
        android:id="@+id/intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FCF6F5"
        android:text="Ready to join the fight against doping?"
        android:textSize="24sp"
        android:textColor="#990011"
        android:textAlignment="center"
        android:layout_marginBottom="20dp" />

    <!-- Username input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:background="#990011">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="22sp"
            android:layout_marginLeft="10sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter username..."
            android:padding="15dp"
            android:textStyle="bold"
            android:background="#FCF6F5"
            android:textSize="18sp"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <!-- Room selection -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:background="#990011">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select which room you want to enter below"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginLeft="10sp"
            android:background="#990011"
            android:textColor="@android:color/white"/>

        <Spinner
            android:id="@+id/room_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FCF6F5"
            android:padding="10dp"/>
    </LinearLayout>

    <!-- Join Chat button -->
    <Button
        android:id="@+id/btn_join_chat"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#990011"
        android:textColor="#FCF6F5"
        android:textStyle="bold"
        android:text="Join Chat"
        android:textSize="18sp"
        />

</LinearLayout>
