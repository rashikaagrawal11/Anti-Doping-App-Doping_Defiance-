<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#FCF6F5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".News">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- News Header -->
        <TextView
            android:id="@+id/news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#990011"
            android:gravity="center"
            android:text="NEWS"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <!-- National Sports Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="National sports News"
            android:background="#FCF6F5"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="20dp" />

        <!-- First Horizontal ScrollView (Sports Cards) -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FAE5EC">

                <!-- CardView 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#FAE5EC">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            app:srcCompat="@drawable/news1"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:id="@+id/link1"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="Niroshan Dickwella's doping ban lifted, Sri Lanka batter eligible to play again....." />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- CardView 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#FAE5EC">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            app:srcCompat="@drawable/clean" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="People fighting to maintain the integrity and dignity in sports world....." />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Add other CardViews as needed -->
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Doping Cases Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doping Cases News"
            android:background="#FCF6F5"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="20dp" />

        <!-- Second Horizontal ScrollView (Doping Cards) -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FAE5EC">

                <!-- CardView 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#FAE5EC">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            app:srcCompat="@drawable/news2"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:id="@+id/link11"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="Hima Das receives clean chit from NADA’s Anti-Doping Appeal Panel"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- CardView 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#FAE5EC">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            app:srcCompat="@drawable/clean" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="People fighting to maintain the integrity and dignity in sports world....." />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Add other CardViews as needed -->
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Events Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Top Events"
            android:background="#FCF6F5"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="20dp" />

        <!-- Third Horizontal ScrollView (Events Cards) -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FAE5EC">

                <!-- CardView 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#FAE5EC">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            app:srcCompat="@drawable/news33"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:id="@+id/link111"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="Hima Das receives clean chit from NADA’s Anti-Doping Appeal Panel"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- CardView 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#FAE5EC">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            app:srcCompat="@drawable/clean" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="People fighting to maintain the integrity and dignity in sports world....." />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Add other CardViews as needed -->
            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Top Voices"
            android:background="#FCF6F5"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="20dp" />

        <!-- First Horizontal ScrollView (Sports Cards) -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FAE5EC">

                <!-- CardView 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/hockey" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- CardView 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/clean" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Add other CardViews as needed -->
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</ScrollView>
