<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#E0E0E0" /> <!-- Background color -->
        </shape>
    </item>
    <!-- Inner circle to represent the timer -->
    <item>
        <shape android:shape="oval">
            <size android:width="200dp" android:height="200dp" />
            <stroke
                android:width="8dp"
                android:color="#FF5722" /> <!-- Timer stroke color -->
        </shape>
    </item>
</layer-list>
