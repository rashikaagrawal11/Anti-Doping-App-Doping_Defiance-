<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:background="#FCF6F5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="false"
        android:backgroundTint="#FCF6F5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FCF6F5"
            tools:context=".MainActivity2"
            android:layout_marginTop="10dp">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FCF6F5"
                app:navigationIcon="@drawable/ic_menu" />

            <EditText
                android:id="@+id/editTextText2"
                android:layout_width="224dp"
                android:layout_height="36dp"
                android:layout_marginEnd="4dp"
                android:background="#FCF6F5"
                android:ems="10"
                android:inputType="text"
                android:text="search"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/searchView"
                app:layout_constraintEnd_toStartOf="@+id/searchView"
                app:layout_constraintTop_toTopOf="@+id/searchView"
                app:layout_constraintVertical_bias="1.0" />

            <SearchView
                android:id="@+id/searchView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:backgroundTint="#E7E8D1"
                android:searchHintIcon="@android:drawable/ic_menu_search"
                android:searchIcon="@android:drawable/ic_menu_search"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/toolbar" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_marginTop="3dp"
                android:scaleType="fitXY"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                 />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/a1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/imageView2">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- CardView 1 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="300dp"
                            android:layout_height="150dp"
                            android:layout_margin="20dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                     />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="300dp"
                            android:layout_height="150dp"
                            android:layout_margin="20dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <!-- CardView 3 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="300dp"
                            android:layout_height="150dp"
                            android:layout_margin="20dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                     />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="300dp"
                            android:layout_height="150dp"
                            android:layout_margin="20dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <!-- CardView 4 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="300dp"
                            android:layout_height="150dp"
                            android:layout_margin="20dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                     />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </HorizontalScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/vision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#990011"
                android:gravity="center"
                android:text="Join the Fight Against Doping"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/a1"
                tools:layout_editor_absoluteX="8dp" />

            <TextView
                android:id="@+id/cred1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Doping undermines the integrity of sports and endangers athletes' health. We are committed to ensuring a clean, fair competition for all. Our mission is to educate, enforce, and provide support to athletes. Together, we promote fair play and uphold the values of sportsmanship. Join us in the fight against doping for a better future in sports."
                android:textColor="#990011"
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:background="#FCF6F5"
                app:layout_constraintTop_toBottomOf="@+id/vision" />

            <TextView
                android:id="@+id/atheletetoolkit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:elevation="15dp"
                android:shadowColor="@color/white"
                android:text="Athelete Toolkit"
                android:background="#990011"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/cred1" />

            <RelativeLayout
                android:id="@+id/toolkit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FCF6F5"
                app:layout_constraintTop_toBottomOf="@id/atheletetoolkit"
                android:layout_margin="10dp">

                <GridLayout
                    android:id="@+id/vieww"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:columnCount="2"
                    android:rowCount="4">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/c1"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:elevation="15dp"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FCF6F5"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="7dp"
                                app:tint="#990011" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:text="THE RULES"
                                android:textColor="#990011"
                                android:textSize="17sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/c2"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:elevation="15dp"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FCF6F5"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="7dp"
                                app:tint="#990011" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:text="RESPONSIBILITY"
                                android:textColor="#990011"
                                android:textSize="17sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/c3"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:elevation="15dp"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FCF6F5"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="7dp"
                                app:tint="#990011" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="PROHIBITED"
                                android:textColor="#990011"
                                android:textSize="17sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="SUBSTANCES"
                                android:textColor="#990011"
                                android:textSize="17sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/c4"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:elevation="15dp"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FCF6F5"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="7dp"
                                app:tint="#990011" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:text="BIOLOGICAL"
                                android:textColor="#990011"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="PASSPORT"
                                android:textColor="#990011"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/c5"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:elevation="15dp"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FCF6F5"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="7dp"
                                app:tint="#990011" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:text="KYM"
                                android:textColor="#990011"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/c6"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:elevation="15dp"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FCF6F5"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="7dp"
                                app:tint="#990011" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:text="TUE'S"
                                android:textColor="#990011"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </GridLayout>
            </RelativeLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:id="@+id/speakup"
                app:layout_constraintTop_toBottomOf="@+id/toolkit">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SPEAK UP!"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:id="@+id/textviewspeakup"
                    android:textStyle="bold"
                    android:textSize="35sp"
                    android:gravity="center" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_margin="10dp"
                    android:textAlignment="center"
                    android:id="@+id/tvspeakup"
                    android:text="To ensure clean sports, NADA India seeks cooperation from all stakeholders. If you observe any doping related misconduct, report it immediately at speakup-nada[at]gov[dot]in. Your identity will be protected."
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_gravity="center_horizontal"
                    app:layout_constraintTop_toBottomOf="@id/textviewspeakup"/>
                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/buttonspeak"
                    android:layout_height="wrap_content"
                    android:text="REPORT"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/tvspeakup"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_marginLeft="160dp"
                    app:circularflow_radiusInDP="-10"
                    android:textColor="#990011"
                    android:backgroundTint="#E2F1E7"
                    app:layout_constraintTop_toBottomOf="@id/tvspeakup"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Navigation View -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu_main"
        android:background="#FFFFFF" />
</androidx.drawerlayout.widget.DrawerLayout>

